<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme using AppCompat -->
    <style name="Theme.CircuitAnalyser" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- AppCompat uses these for primary/secondary branding -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_variant</item> <!-- AppCompat uses `colorPrimaryDark` -->
        <item name="colorAccent">@color/secondary</item> <!-- AppCompat uses `colorAccent` -->

        <!-- Background and surface -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/on_background</item>

        <!-- Optional: Force dark mode handling -->
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <!-- Custom text appearance (optional) -->
    <style name="CustomTypography" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

</resources>
